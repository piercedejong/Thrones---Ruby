<% content_for :title, "Death Pool - Account"%>
<% flash.each do |key, value| %>
  <% if value.include? "Error" %>
    <div class="alert alert-danger text-center" role="alert"><%= value %></div>
  <% else %>
    <div class="alert alert-success text-center" role="alert"><%= value %></div>
  <%end%>
<% end %>
<div class="container">
  <div class="text-center title shadow-text">Account Settings</div>
  <div class="row text-center" style="margin-top:6rem">
    <div class="col-sm-4">
      <!-- <div class="text-center sub-title shadow-text">Reset Predictions</div>
      <h4 class="shadow-text">This will reset all of your character predictions and any bonus questons you have answered</h4>
      <% link_to "Reset Predictions", reset_entry_path(@user.uuid), class:"btn btn-danger shadow-text", :data => {:confirm => 'Are you sure? There is no way to reverse this'} %> -->
    </div>
    <div class="col-sm-4">
      <div id="username" class="text-center user shadow-text"><%=@user.username%></div>
      <div id="email" class="text-center sub-title shadow-text"><%=@user.email%></div></div>
    <div class="col-sm-4">
      <div id="house" class="sub-title text-center shadow-text"><%=@user.house.name%></div>
      <div class="text-center"><%= image_tag current_user.house.image, class:"image-house" %></div>
      <pre id="words" class="title words text-center shadow-text"><%=current_user.house.words%></pre>
    </div>
  </div>

  <div class="row" style="margin-top:8rem">
    <div class="col-sm-4">
      <!-- <div class="text-center sub-title shadow-text">Update Username</div>
      <% render 'formUsername', user: @user %> -->
    </div>
    <div class="col-sm-4">
      <div class="text-center sub-title shadow-text">Update Password</div>
      <%= render 'formPassword', user: @user %>
    </div>
    <div class="col-sm-4">
      <!-- <div class="text-center sub-title shadow-text">Update House</div>
      <% render 'formHouse', user: @user %> -->
    </div>
  </div>
  <div class="row text-center" style="margin-top:6rem">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>

<%= link_to 'Home', root_url, class:"topalignedleft btn btn-outline-light btn-back shadow-text" %>

<script>
$(document).ready(function () {
  bg = $("#background").css("background-image")
  if(bg.includes("got0")){
    $("#house").css("color","#262626").removeClass("shadow-text")
    $("#words").css("color","#262626").removeClass("shadow-text")
    $("#username").css("color","#262626").removeClass("shadow-text")
    $("#email").css("color","#262626").removeClass("shadow-text")
 }
});
</script>
