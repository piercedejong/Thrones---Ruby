<% content_for :title, "Death Pool - Sign In"%>
<pre class="text-center title shadow-text ">Sign   In</pre>
<div class="row content" style ="margin-left: 0px;margin-right: 0px;">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4">
    <%= form_tag sessions_path do |form| %>
      <div id="returning-user--form"class="form">
        <div class='form-group'>
          <%= label_tag :username, "Your Username:", class:'form-text'%>
          <%= text_field_tag :username, nil, class:"form-input" %>
        </div>
        <div class='form-group'>
          <%= label_tag :password, "Your Password:", class:'form-text'%>
          <%= password_field_tag :password, nil, class:"form-input"%>
        </div>
        <div class='actions'>
          <%= submit_tag 'Login',:class=>"btn btn-main btn-outline-light" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4">
  </div>
</div>
<%= link_to 'Back', root_url, :class=>"bottomaligned btn btn-outline-light" %>
