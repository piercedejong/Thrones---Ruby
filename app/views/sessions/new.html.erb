<% content_for :title, "Death Pool - Sign In"%>
<div id="sign-in" class="title shadow-text text-center">Sign In</div>
<div class="row content" style ="margin-left: 0px;margin-right: 0px;">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4">
    <%= form_tag sessions_path do |form| %>
      <div class='form-group'>
        <%= label_tag :email, "Your Email:", class:'form-text'%>
        <%= text_field_tag :email, nil, class:"form-input" %>
      </div>
      <div class='form-group'>
        <%= label_tag :password, "Your Password:", class:'form-text'%>
        <%= password_field_tag :password, nil, class:"form-input"%>
      </div>
      <div class='actions'>
        <%= submit_tag 'Login',:class=>"btn btn-outline-light" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4">
  </div>
</div>
<%= link_to 'Back', root_url, :class=>"bottomaligned btn btn-outline-light" %>
