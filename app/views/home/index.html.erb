<% content_for :title, "Death Pool"%>
<pre class="title text-center shadow-text default-color" style="margin:0px">Game   of   Thrones   Death   Pool</pre>
<% if current_user %>
  <div id="user-logged-in">
    <% if !current_user.payed %>
      <div id="scum" class="text-center shadow-text">You have NOT paid your entry fee yet</div>
    <% end %>
    <div class="row content">
      <div class="col-sm-4">
        <table class="table table-condensed default-color">
          <thead>
            <tr class="shadow-text table-top">
              <th class="text-center" colspan="2">Character</th>
              <th class="text-center">Alive or Dead</th>
              <th class="text-center">Wight</th>
              <!-- <th class="text-center">Points</th> -->
            </tr>
          </thead>
          <tbody class="unit-table">
            <% current_user.characters.each do |c| %>
              <% if c.id%2 ==  0 %>
                <tr class="tablerow1 shadow-text">
              <% else %>
                <tr class="tablerow2 shadow-text">
              <% end %>
                  <td><%= image_tag "characters/"+c.name+".jpg", :class=>"image-character" %></td>
                  <td id="<%c.name%>" class="text-center character-name"><%= c.name %></td>
                  <td class="text-center align-middle">
                    <%if c.dead %>
                     <button class="btn btn-dead btn-character nowrap shadow-text" id="dead-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_dead(this)">Dead</button>
                     <%else%>
                     <button class="btn btn-alive btn-character nowrap shadow-text" id="dead-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_dead(this)">Alive</button>
                     <%end%>
                  </td>
                  <td class="text-center align-middle">
                    <%if c.walker %>
                     <button class="btn btn-walker btn-character nowrap shadow-text" id="walker-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_walker(this)">Wight</button>
                     <%else%>
                      <%if c.dead %>
                        <button class="btn btn-just-dead btn-character nowrap shadow-text" id="walker-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_walker(this)">Just Dead</button>
                      <% else %>
                        <button class="btn btn-just-dead btn-character nowrap shadow-text" id="walker-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_walker(this)">N/A</button>
                      <% end %>
                     <%end%>
                  </td>
                  <!-- <td class="text-center align-middle character-name"><%=c.points%> -->
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-sm-4"></div>
      <div class="col-sm-4 right-side">
      <div id="rules" class="default-color">
        <div id="rules-title" class="shadow-text">Rules</div>
        <% Rule.all.each do |r| %>
          <div id="rule<%=r.rid%>" class="shadow-text rule"><%=r.rid%>. <%=r.rule%></div>
        <%end%>
      </div>
      <div id="questions" class="default-color">
        <div id="questions-title" class="shadow-text">Bonus Questions</div>
        <%= form_tag "/answers" do %>
          <% Question.all.each do |q| %>
            <div id="question<%=q.qid%>" class="shadow-text rule"><%=q.qid%>. <%=q.text%></div>
            <%= text_field_tag "answers[][text]", current_user.answers.find_by(rid: q.qid).text, :class=>"answer" %>
          <% end %>
          <div style="padding-top:8px"><%= submit_tag "Save Answers", :class=>"btn btn-outline-light btn-main shadow-text", :style=>"font-size:1.75rem;width:auto" %></div>
        <% end %>
      </div>
      <%= link_to 'Leaderboards', users_path, :class=>"btn btn-outline-light btn-main shadow-text", :style=>"margin-top:10px"%>
      <%= link_to 'Drinking Game', drink_path, :style=>"margin-top: 10px",:class=>"btn btn-outline-light btn-main shadow-text" %>
      <%= link_to 'Statistics', statistics_path, :style=>"margin-top: 10px",:class=>"btn btn-outline-light btn-main shadow-text" %>
      <% if current_user.role.eql? "admin" %>
        <%= link_to 'Character Status', death_path, :class=>"btn btn-outline-light btn-main shadow-text", :style=>"margin-top: 10px" %>
      <% end %>
      </div>
    </div>
    <div id="current-user" class=" bottomalignedright shadow-text default-color">
      Logged in as <%= current_user.username %>
      <%= link_to 'Log Out', logout_path, :class=>"btn btn-log-out btn-main btn-outline-light" %>
    </div>
  </div>
<% else %>
<div id="no-current-user" class="container-fluid">
  <div class="row content">
    <div class="col-sm-4">
    </div>
    <div id="" class="col-sm-4">
      <div class="" style="margin-top:50%">
      <%= link_to 'Sign Up', signup_path, :id=>"sign-up", :class=>"btn btn-main btn-outline-dark", :role=>"button" %>
      <%= link_to 'Log In', login_path, :id=>"log-in", :class=>"btn btn-main btn-outline-light", :role=>"button" %>
      <div>
    </div>
    <div class="col-sm-4">
    </div>
  </div>
</div>
<% end %>
<p id=”notice”><%= notice %></p>
