<% content_for :title, "Death Pool"%>
<% flash.each do |key, value| %>
      <div class="alert alert-success text-center" role="alert"><%= value %></div>
<% end %>
<pre class="title text-center shadow-text">Game   of   Thrones   Death   Pool</pre>
<div class="container">
  <div class="row m-auto">
    <div class="col-sm-4 align-items-center justify-content-center">
      <div class="text-center">
        <div class="time-info text-center">Predictions can be made until <strong>ONE</strong> hour before season 8 starts</div>
        <div style="">
          <ul class=list-inline>
            <li class="list-inline-item">
              <p id="day" class="time"></p>
              <p class="date">Days</p>
            </li>
            <li class="list-inline-item">
              <p id="hour" class="time"></p>
              <p class="date">Hours</p>
            </li>
            <li class="list-inline-item">
              <p id="minute" class="time"></p>
              <p class="date">Min</p>
            </li>
            <li class="list-inline-item">
              <p id="second" class="time"></p>
              <p class="date">Sec</p>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <% if current_user and current_user.house %>
        <div id="house" class="sub-title text-center shadow-text"><%=current_user.house.name%></div>
        <div id="sigil" class="text-center"><%= image_tag current_user.house.image, class:"image-house" %></div>
        <pre id="words" class="title words text-center shadow-text"><%=current_user.house.words%></pre>
      <%end %>
    </div>
  </div>
<% if current_user %>
  <div class="row middle-bar align-items-center">
    <div class="col-sm-4">
      <div class="sub-title text-center shadow-text">Current Leader</div>
      <h1 class="text-center shadow-text"><%=first_place.username%></h1>
      <h3 class="text-center shadow-text"><%=first_place.points%> points</h3>
      <!-- <div class="sub-title text-center shadow-text">Current Leaders</div>
      <div class="row align-items-center" style="">
        <div class="col-sm-4 text-center shadow-text">
          <h1>1st</h1>
          <h2><%=first_place.username%></h2>
          <h4><%=first_place.points%> points</h4>
        </div>
        <div class="col-sm-4 text-center shadow-text">
          <%if second_place%>
          <h1>2nd</h1>
          <h2><%=second_place.username%></h2>
          <h4><%=second_place.points%> points</h4>
          <%end%>
        </div>
        <div class="col-sm-4 text-center shadow-text">
          <%if third_place%>
          <h1>3rd</h1>
          <h2><%=third_place.username%></h2>
          <h4><%=third_place.points%> points</h4>
          <%end%>
        </div>
      </div> -->
    </div>
    <div class="col-sm-4 order-first order-sm-2 text-center">
      <div class="card prediction-card">
        <i style="font-size:5rem;" class="fab fa-wpforms"></i>
        <h2 class="shadow-text">Predictions</h2>
        <h5 class="shadow-text">Make your predictions for the FINAL season of Game of Throns. Guess who is ging to live, die, or become a wight and answer the bonus questions<h5>
        <%= link_to 'Make Your Predictions', user_path(current_user.uuid), :class=>"btn btn-warning btn-block btn-prediction", :style=>"margin:auto;margin-top:1rem"%>
      </div>
    </div>
    <div class="col-sm-4 order-first order-sm-2">
      <div class="sub-title text-center shadow-text">House Questions</div>
      <h4 class="shadow-text text-center">Will be available on April 7th</h4>
    </div>
  </div>
  <div class="row align-items-end bottom-bar">
    <div class="col-sm-2 text-center shadow-text">
      <i style="font-size:5rem" class="fas fa-gavel"></i>
      <div style="font-size:2rem">Rules</div>
      <div style="font-size:1.25rem">Read the rules and FAQ</div>
      <div style="font-size:1.25rem;color:transparent;text-shadow:none">.</div>
      <%= link_to 'View the Rules', rules_path, :class=>"btn btn-outline-light btn-main btn-block", :style=>"margin:auto;margin-top:1rem"%>
    </div>
    <div class="col-sm-2 text-center shadow-text">
      <i style="font-size:5rem;" class="far fa-chart-bar"></i>
      <div style="font-size:2rem">Statistics</div>
      <div style="font-size:1.25rem">The average prediction of each character</div>
      <%= link_to 'Statistics', characters_path, :class=>"btn btn-outline-light btn-main btn-block", :style=>"margin:auto;margin-top:1rem"%>
    </div>
    <div class="col-sm-2 text-center shadow-text">
      <i style="font-size:5rem;" class="fas fa-home"></i>
      <div style="font-size:2rem">Houses</div>
      <div style="font-size:1.25em">See the house standings and house members</div>
      <%= link_to 'Houses', houses_path, :class=>"btn btn-outline-light btn-main btn-block", :style=>"margin:auto;margin-top:1rem"%>
    </div>
    <div class="col-sm-2 text-center shadow-text">
      <i style="font-size:5rem"class="fas fa-poll"></i>
      <div style="font-size:2rem">Leaderboards</div>
      <div style="font-size:1.25rem">Check out everyones current poistion!</div>
      <!-- <div style="font-size:1.25rem"><strong>SPOILERS AHEAD</strong></div> -->
      <%= link_to 'Leaderboards', users_path, :class=>"btn btn-outline-light btn-main btn-block", :style=>"margin:auto;margin-top:1rem"%>
      <!--<%= link_to 'Spoiler-Free Leaderboards', spoilerfree_path, :class=>"btn btn-outline-dark color", :style=>"margin:auto;margin-top:1rem"%> -->
    </div>
    <div class="col-sm-2 text-center shadow-text">
      <i style="font-size:5rem"class="fas fa-wine-glass-alt"></i>
      <div style="font-size:2rem">Drinking Game</div>
      <div style="font-size:1.25rem">The rules for the Game of Thrones drinking game.</div>
      <%= link_to 'Drinking Game', drinks_path, :class=>"btn btn-outline-light btn-main btn-block", :style=>"margin:auto;margin-top:1rem"%>
    </div>
    <div class="col-sm-2 text-center shadow-text">
      <i style="font-size:5rem"class="fas fa-cogs"></i>
      <div style="font-size:2rem">Account Settings</div>
      <div style="font-size:1.25rem">View, update, and edit your account</div>
      <%= link_to 'Account', edit_user_path(current_user.uuid), :class=>"btn btn-outline-light btn-main btn-block", :style=>"margin:auto;margin-top:1rem"%>
    </div>
  </div>
</div>
<% if !current_user.paid %>
  <div id="scum" class="text-center shadow-text">You have NOT paid your entry fee yet</div>
<% end %>
<div id="current-user" class=" bottomalignedright shadow-text ">
  Welcome <%= current_user.username %>
  <%= link_to 'Log Out', logout_path, :class=>"btn btn-log-out btn-outline-light" %>
</div>
</div>
<% else %>
<% content_for :title, " - Login"%>
  <div class="position row align-items-center" style="">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <div class="card">
      <article class="card-body">
        <%= link_to 'Sign Up', signup_path, :id=>"sign-up", :class=>"btn btn-outline-dark top-aligned-left", :role=>"button" %>
      	<h4 class="card-title text-center mb-4 mt-1" style="color:black;font-size:2rem">Login</h4>
        <%= form_tag sessions_path do |form| %>
        	<form>
        	<div class="form-group">
        	<div class="input-group">
        		<div class="input-group-prepend">
        		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
        		 </div>
             <%= text_field_tag :username, "", placeholder:"Email or Username", class:"form-control" %>
        	</div> <!-- input-group.// -->
        	</div> <!-- form-group// -->
        	<div class="form-group">
        	<div class="input-group">
        		<div class="input-group-prepend">
        		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        		 </div>
             <%= password_field_tag :password, "", placeholder:"Password",  class:"form-control"%>
        	</div> <!-- input-group.// -->
        	</div> <!-- form-group// -->
        	<div class="form-group">
            <%= submit_tag 'Login', :class=>"btn btn-primary btn-block" %>
        	</div> <!-- form-group// -->
        	</form>
        <% end %>
      </article>
      </div> <!-- card.// -->
    </div>
    <div class="col-sm-4">
    </div>
  </div>
</div>
<% end %>

<script>
$(document).ready(function () {
 bg = $("#background").css("background-image")
 if(bg.includes("got1") || bg.includes("got5")){
   $(".time").css('color',"#f9f2de")
   $(".date").css('color',"#f9f2de")
   $(".time-info").css('color',"#f9f2de")
 }
 if(bg.includes("got0")){
   $("#house").css("color","#262626").removeClass("shadow-text")
   $("#words").css("color","#262626").removeClass("shadow-text")
 }
});
</script>
