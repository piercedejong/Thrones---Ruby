<% content_for :title, "Death Pool"%>
<div id="title" class="title text-center shadow-text">Game of Thrones Death Pool</div>
<% if current_user %>
  <div id="user-logged-in">
    <div class="row content">
      <div class="col-sm-8">
    <% if current_user.payed %>
      <div id="payed" class="shadow-text">You have paid</div>
    <% else %>
      <div id="scum" class="shadow-text">You have NOT paid yet. PAY ME NOW</div>
      <% end %>
    <table class="table table-condensed table-characters">
      <thead>
        <tr class="shadow-text table-top">
          <th class="text-center">Character</th>
          <th class="text-center">Alive or Dead</th>
          <th class="text-center">Wight</th>
          <!-- <th class="text-center">Points</th> -->
        </tr>
      </thead>
      <tbody class="unit-table">
        <% current_user.characters.each do |c| %>
          <% if c.id%2 ==  0 %>
            <tr class="tablerow1 shadow-text">
          <% else %>
            <tr class="tablerow2 shadow-text">
          <% end %>
              <td id="<%c.name%>" class=" text-center character-name shadow-text"><%= c.name %></td>
              <td class="text-center align-middle">
                <%if c.dead %>
                 <button class="btn btn-dead nowrap shadow-text" id="dead-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_dead(this)">Dead</button>
                 <%else%>
                 <button class="btn btn-alive nowrap shadow-text" id="dead-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_dead(this)">Alive</button>
                 <%end%>
              </td>
              <td class="text-center align-middle">
                <%if c.walker %>
                 <button class="btn btn-walker nowrap shadow-text" id="walker-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_walker(this)">Wight</button>
                 <%else%>
                  <%if c.dead %>
                    <button class="btn btn-just-dead nowrap shadow-text" id="walker-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_walker(this)">Just Dead</button>
                  <% else %>
                    <button class="btn btn-just-dead nowrap shadow-text" id="walker-<%=c.cid%>" cid="<%=c.cid%>" character="<%=c.name%>" onclick="change_walker(this)">N/A</button>
                  <% end %>
                 <%end%>
              </td>
              <!-- <td class="text-center align-middle character-name"><%=c.points%> -->
            </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-sm-4">
    <div id="rules" style="padding-left:15px;padding-bottom:8px">
      <div id="rules-title" class="shadow-text ">Rules</div>
      <% Rule.all.each do |r| %>
        <div id="rule<%=r.rid%>" style="padding-top:5px"class="shadow-text rule"><%=r.rid%>. <%=r.rule%></div>
      <%end%>
    </div>
    <div id="questions" style="padding-left:15px;border-top: 5px double rgb(150,150,150);">
      <div id="rules-title" class="shadow-text ">Bonus Questions</div>
      
    </div>
    <%= link_to 'Drinking Game', drink_path, :style=>"margin-top: 20px",:class=>"btn btn-outline-light btn-main btn-drink" %>
    <% if current_user.role.eql? "admin" %>
      <%= link_to 'Users', users_path, :class=>"btn btn-outline-light btn-back" %>
      <%= link_to 'Deaths', death_path, :class=>"btn btn-outline-light btn-back" %>
    <% end %>
    </div>
  </div>
</div>
<div id="current-user" class=" bottomalignedright shadow-text">
  Logged in as <%= current_user.email %>
  <%= link_to 'Log Out', logout_path, :class=>"btn btn-log-out btn-main btn-outline-light" %>
</div>

<% else %>
<div class="container-fluid" style="padding-top:2vw">
  <div class="row content">
    <div class="col-sm-4">
    </div>
    <div id="" class="col-sm-4">
      <%= link_to 'Log In', login_path, :id=>"log-in", :class=>"btn btn-main btn-outline-light btn-log-in", :role=>"button" %>
      <%= link_to 'Sign Up', signup_path, :id=>"sign-up", :class=>"btn btn-main btn-outline-dark btn-sign-up ", :role=>"button" %>
    </div>
    <div class="col-sm-4">
    </div>
  </div>
</div>
<% end %>
<p id=”notice”><%= notice %></p>
