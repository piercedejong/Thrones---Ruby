<div id="title" class="text-center shadow-text">Game of Thrones Death Pool</div>
<% if current_user %>
  Logged in as <%= current_user.email %>.
  <%= link_to 'Log Out', logout_path %>
<% else %>
  <div class="topalignedright">
    <%= link_to 'Sign Up', signup_path, :id=>"sign-up", :class=>"btn btn-log btn-sign-up shadow-text", :role=>"button" %>
    <%= link_to 'Log In', login_path, :id=>"log-in", :class=>"btn btn-log btn-log-in shadow-text", :role=>"button" %>
  </div>
<% end %>
<p id=”notice”><%= notice %></p>
