<div id="title" class="text-center shadow-text">Game of Thrones Death Pool</div>
<% if current_user %>
  <div id="current-user" class=" bottomalignedright shadow-text">
    Logged in as <%= current_user.email %>
    <%= link_to 'Log Out', logout_path, :class=>"btn btn-log-out" %>
  </div>
<% else %>
  <div id="userbuttons" class="swag topalignedright">
    <%= link_to 'Sign Up', signup_path, :id=>"sign-up", :class=>"btn btn-outline-secondary btn-sign-up shadow-text", :role=>"button" %>
    <%= link_to 'Log In', login_path, :id=>"log-in", :class=>"btn btn-outline-primary btn-log-in shadow-text", :role=>"button" %>
  </div>
<% end %>
<p id=”notice”><%= notice %></p>
