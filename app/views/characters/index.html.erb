<% content_for :title, "Death Pool - Stats"%>
<pre class="title text-center shadow-text " style="margin:0px">Character   Statistics</pre>
<div class="container">
  <div class="row content ">
    <div class="col-sm-4">
      <pre class="title sub-title text-center  shadow-text" style="margin:0px">Most Predicted as Alive</pre>
      <table class="table">
        <tbody class="unit-table">
          <% Death.order(alive: :desc).first(5).each do |d| %>
            <tr class="tablerow1 shadow-text">
              <td><%= image_tag "characters/"+d.name+".jpg", :class=>"image-character" %></td>
              <td class="align-middle character-name"><%=d.alive%>% of people think <%=d.name%> will live</td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4">
      <pre class="title sub-title text-center  shadow-text" style="margin:0px">Most Predicted as Dead</pre>
      <table class="table">
        <tbody class="unit-table">
          <% Death.order(dead: :desc).first(5).each do |d| %>
            <tr class="tablerow1 shadow-text">
              <td><%= image_tag "characters/"+d.name+".jpg", :class=>"image-character" %></td>
              <td class="align-middle character-name"><%=d.dead%>% of people think <%=d.name%> will die</td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4">
      <pre class="title sub-title text-center  shadow-text" style="margin:0px">Most predicted as Wight</pre>
      <table class="table">
        <tbody class="unit-table">
          <% Death.order(wight: :desc).first(5).each do |d| %>
            <tr class="tablerow1 shadow-text">
              <td><%= image_tag "characters/"+d.name+".jpg", :class=>"image-character" %></td>
              <td class="align-middle character-name"><%=d.wight%>% of people think <%=d.name%> will become a wight</td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-10 shadow-text">
      <pre class="title sub-title text-center  shadow-text" style="margin:0px">Overall    Predictions</pre>
      <div>
        <% Death.order(alive: :desc).all.each do |d| %>
        <% if !d.eql? Death.last %>
          <div class="row content" style="margin-top:20px">
            <div class="col-sm-1"></div>
            <div class="col-sm-3 d-flex">
              <%= image_tag "characters/"+d.name+".jpg", :class=>"image-character-stats" %>
              <div class="character-name text-center" style="margin:auto" id="<%=d.name%>"> <%=d.name%></div>
            </div>
            <div class="col-sm-7 d-flex">
              <div class="progress character-name" style="font-size:1.5rem">
                <div role="progressbar" class="progress-bar " style="display:inline-block;background-color:#52ad6a;width:<%=d.alive%>%"><div style="margin-top:0.75rem"><i class="fas fa-heart"></i><%= d.alive.to_s+"%" if d.alive >=5.00 %></div></div>
                <div role="progressbar" class="progress-bar" style="display:inline-block;background-color:#ad5252;width:<%=d.dead%>%"><div style="margin-top:0.75rem"><i class="fas fa-skull-crossbones"></i><%= d.dead.to_s+"%" if d.dead >=5.00 %></div></div>
                <div role="progressbar" class="progress-bar" style="display:inline-block;background-color:#5296ad;width:<%=d.wight%>%"><div style="margin-top:0.75rem"><i class="fas fa-skull"></i><%= d.wight.to_s+"%" if d.wight >=5.00 %></div></div>
              </div>
            </div>
            <div class="col-sm-1"></div>
          </div>
        <%end%>
        <% end %>
      </div>
    </div>
    <div class="col-sm-1">
    </div>
  </div>
  <br>
  <br>
</div>
<%= link_to 'Home', root_url, :class=>"topalignedleft btn btn-outline-light btn-back shadow-text" %>
