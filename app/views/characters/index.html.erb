<pre class="title text-center shadow-text default-color" style="margin:0px">Character   Statistics</pre>
<div class="row content">
  <div class="col-sm-4">
    <pre class="title sub-title text-center shadow-text default-color" style="margin:0px">Most Predicted to stay alive</pre>
  </div>
  <div class="col-sm-4">
    <pre class="title sub-title text-center shadow-text default-color" style="margin:0px">Most Predicted to die</pre>
  </div>
  <div class="col-sm-4">
    <pre class="title sub-title text-center shadow-text default-color" style="margin:0px">MOst predicted to be a wight</pre>
  </div>
</div>

<table style="color:white;margin:0px;width:auto;margin-left:auto;margin-right:auto" class="table table-condensed ">
  <thead>
    <tr class="shadow-text table-top text-center">
      <th colspan="2">Character</th>
      <th>Alive</th>
      <th>Dead</th>
      <th>Wight</th>
    </tr>
  </thead>
  <tbody class="unit-table">
    <% Death.all.each do |d| %>
      <% if d.id%2 ==  0 %>
        <tr class="tablerow1 shadow-text">
      <% else %>
        <tr class="tablerow2 shadow-text">
      <% end %>
      <td><%= image_tag "characters/"+d.name+".jpg", :class=>"image-character" %></td>
      <td id="<%d.name%>" class="text-center character-name"><%= d.name %></td>
      <td id="<%d.name%>" class="text-center character-name"><%= alive(d.name) %></td>
      <td id="<%d.name%>" class="text-center character-name"><%= dead(d.name) %></td>
      <td id="<%d.name%>" class="text-center character-name"><%= wight(d.name) %></td>
      </tr>
    <%end%>
  </tbody>
</table>


<%= link_to 'Back', root_url, :class=>"topalignedleft btn btn-outline-light btn-back shadow-text" %>
